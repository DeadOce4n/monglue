{
  "name": "monglue",
  "version": "0.1.0",
  "description": "A thin wrapper around MongoDB's official adapter for Node.js with type-safe joins.",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsup",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:types": "vitest typecheck",
    "lint": "eslint --fix \"./{src,test}/**/*.ts\"",
    "format": "prettier -w --ignore-unknown ."
  },
  "keywords": [
    "mongodb",
    "typescript",
    "database",
    "mongoose"
  ],
  "author": "Ivan Partida <ivan.97galarz@gmail.com>",
  "license": "MPL-2.0",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@faker-js/faker": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "mongodb": "^6.1.0",
    "mongodb-memory-server": "^8.15.1",
    "prettier": "^3.0.3",
    "remeda": "^1.27.0",
    "tsup": "^7.2.0",
    "type-fest": "^4.3.2",
    "typescript": "^5.2.2",
    "vite": "^4.4.9",
    "vitest": "0.34.5",
    "zod": "^3.22.2"
  },
  "peerDependencies": {
    "mongodb": "^6",
    "zod": "^3"
  }
}
